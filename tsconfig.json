{
  "include": ["src/**/*.ts"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@domain/*": ["domain/*"],
      "@shared/*": ["shared/*"],
      "@infra/*": ["infra/*"]
    }
  }
}
